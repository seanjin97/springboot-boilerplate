<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%date{yyyy-MM-dd HH:mm:ss.SSS}{GMT+8}}{magenta} %style{{SpringbootTemplate}}{green} %style{[%c{1}]}{cyan} %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} %location - %message%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.group8" level="DEBUG" additivity="true" includeLocation="true">
        </Logger>
        <Root level="INFO" includeLocation="true">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
